{
    "_comment": "TGWrapper Configuration Example (JSON)",
    "_description": "This file demonstrates all available configuration options for tgwrapper.",

    "bot": {
        "token": "${BOT_TOKEN}",
        "commands": [
            {
                "command": "menu",
                "description": "Show main menu"
            },
            {
                "command": "help",
                "description": "Display help information"
            },
            {
                "command": "settings",
                "description": "Bot settings"
            }
        ],
        "warning_chat": {
            "chat_id": -1001234567890,
            "topic_id": 123
        },
        "log_chat": {
            "chat_id": -1001234567890,
            "topic_id": 456
        },
        "delete_commands_on_exit": false
    },

    "main_menu_id": "main",

    "menus": {
        "main": {
            "id": "main",
            "text": "üè† *Main Menu*\n\nWelcome! Please select an option:",
            "buttons": [
                [
                    {
                        "text": "üìä Dashboard",
                        "flow_id": "dashboard_flow"
                    },
                    {
                        "text": "‚öôÔ∏è Settings",
                        "menu_id": "settings_menu"
                    }
                ],
                [
                    {
                        "text": "üìñ Help",
                        "callback": "show_help"
                    }
                ],
                [
                    {
                        "text": "üåê Website",
                        "url": "https://example.com"
                    }
                ]
            ],
            "condition": "env.IsAuthenticated"
        },

        "settings_menu": {
            "id": "settings_menu",
            "text": "‚öôÔ∏è *Settings*\n\nConfigure your preferences:",
            "buttons": [
                [
                    {
                        "text": "üîî Notifications",
                        "callback": "toggle_notifications"
                    },
                    {
                        "text": "üåç Language",
                        "flow_id": "select_language"
                    }
                ],
                [
                    {
                        "text": "‚¨ÖÔ∏è Back",
                        "callback": "main_menu"
                    }
                ]
            ]
        },

        "items_menu": {
            "id": "items_menu",
            "text": "üìã *Items List*\n\nBrowse available items:",
            "pages": [
                {
                    "id": "page_1",
                    "name": "Page 1",
                    "buttons": [
                        [
                            { "text": "Item 1", "callback": "item:1" },
                            { "text": "Item 2", "callback": "item:2" }
                        ],
                        [
                            { "text": "Item 3", "callback": "item:3" },
                            { "text": "Item 4", "callback": "item:4" }
                        ]
                    ]
                },
                {
                    "id": "page_2",
                    "name": "Page 2",
                    "buttons": [
                        [
                            { "text": "Item 5", "callback": "item:5" },
                            { "text": "Item 6", "callback": "item:6" }
                        ]
                    ]
                }
            ]
        }
    },

    "flows": {
        "dashboard_flow": {
            "id": "dashboard_flow",
            "name": "Dashboard",
            "initial_step": "select_metric",
            "ttl": "30m",
            "steps": {
                "select_metric": {
                    "prompt_text": "üìä *Dashboard*\n\nSelect a metric to view:",
                    "keyboard": {
                        "type": "dynamic",
                        "provider": "getMetrics",
                        "columns": 2,
                        "add_back": true,
                        "add_main": true,
                        "callback_prefix": "metric:"
                    },
                    "input_type": "callback",
                    "store_as": "selectedMetric",
                    "on_complete": "displayMetricData"
                }
            }
        },

        "user_registration": {
            "id": "user_registration",
            "name": "User Registration",
            "initial_step": "enter_name",
            "ttl": "15m",
            "steps": {
                "enter_name": {
                    "prompt_text": "üìù *Registration*\n\nPlease enter your name:",
                    "keyboard": {
                        "add_back": true
                    },
                    "input_type": "text",
                    "store_as": "userName",
                    "validation": {
                        "type": "regex",
                        "pattern": "^[a-zA-Z ]{2,50}$",
                        "error_msg": "Name must be 2-50 letters only"
                    },
                    "next_step": "enter_email"
                },
                "enter_email": {
                    "prompt_text": "üìù *Registration*\n\nPlease enter your email address:",
                    "keyboard": {
                        "add_back": true
                    },
                    "input_type": "text",
                    "store_as": "userEmail",
                    "validation": {
                        "type": "email",
                        "error_msg": "Please enter a valid email address"
                    },
                    "next_step": "confirm_registration"
                },
                "confirm_registration": {
                    "prompt_text": "üìù *Registration*\n\nPlease confirm your information:\nName: {{.userName}}\nEmail: {{.userEmail}}",
                    "keyboard": {
                        "type": "static",
                        "buttons": [
                            [
                                { "text": "‚úÖ Confirm", "callback": "confirm:yes" },
                                { "text": "‚ùå Cancel", "callback": "confirm:no" }
                            ]
                        ]
                    },
                    "input_type": "callback",
                    "store_as": "confirmation",
                    "branches": [
                        {
                            "condition": "input == \"confirm:yes\"",
                            "next_step": ""
                        }
                    ],
                    "on_complete": "completeRegistration"
                }
            }
        },

        "amount_input": {
            "id": "amount_input",
            "name": "Amount Input",
            "initial_step": "enter_amount",
            "steps": {
                "enter_amount": {
                    "prompt_text": "üí∞ *Enter Amount*\n\nPlease enter an amount (1-1000):",
                    "keyboard": {
                        "add_back": true
                    },
                    "input_type": "text",
                    "store_as": "amount",
                    "validation": {
                        "type": "number",
                        "min": "1",
                        "max": "1000",
                        "error_msg": "Amount must be between 1 and 1000"
                    },
                    "on_complete": "processAmount"
                }
            }
        },

        "address_input": {
            "id": "address_input",
            "name": "Ethereum Address Input",
            "initial_step": "enter_address",
            "steps": {
                "enter_address": {
                    "prompt_text": "üîó *Enter Address*\n\nPlease enter an Ethereum address:",
                    "keyboard": {
                        "add_back": true
                    },
                    "input_type": "text",
                    "store_as": "ethAddress",
                    "validation": {
                        "type": "address",
                        "error_msg": "Please enter a valid Ethereum address (0x...)"
                    },
                    "on_complete": "processAddress"
                }
            }
        },

        "support_flow": {
            "id": "support_flow",
            "name": "Support Request",
            "initial_step": "select_category",
            "steps": {
                "select_category": {
                    "prompt_text": "üÜò *Support*\n\nWhat do you need help with?",
                    "keyboard": {
                        "type": "static",
                        "buttons": [
                            [
                                { "text": "üêõ Bug Report", "callback": "category:bug" },
                                { "text": "üí° Feature Request", "callback": "category:feature" }
                            ],
                            [{ "text": "‚ùì General Question", "callback": "category:question" }]
                        ],
                        "add_back": true
                    },
                    "input_type": "callback",
                    "store_as": "category",
                    "branches": [
                        { "condition": "input == \"category:bug\"", "next_step": "describe_bug" },
                        { "condition": "input == \"category:feature\"", "next_step": "describe_feature" },
                        { "condition": "input == \"category:question\"", "next_step": "ask_question" }
                    ]
                },
                "describe_bug": {
                    "prompt_text": "üêõ *Bug Report*\n\nPlease describe the bug in detail:",
                    "input_type": "text",
                    "store_as": "bugDescription",
                    "on_complete": "submitBugReport"
                },
                "describe_feature": {
                    "prompt_text": "üí° *Feature Request*\n\nPlease describe the feature you'd like:",
                    "input_type": "text",
                    "store_as": "featureDescription",
                    "on_complete": "submitFeatureRequest"
                },
                "ask_question": {
                    "prompt_text": "‚ùì *General Question*\n\nPlease type your question:",
                    "input_type": "text",
                    "store_as": "question",
                    "on_complete": "submitQuestion"
                }
            }
        }
    }
}
